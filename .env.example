# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# File System
WATCH_DIRECTORIES=C:/Users/username/Documents,C:/Users/username/Downloads
CLEANUP_DIRECTORIES=C:/Users/username/Downloads,C:/Users/username/Temp

# System Monitoring
MONITORING_INTERVAL=60  # seconds
CPU_THRESHOLD=80  # percentage
MEMORY_THRESHOLD=85  # percentage
DISK_THRESHOLD=90  # percentage

# Maintenance
MAINTENANCE_SCHEDULE=0 3 * * *  # Run at 3 AM daily
BACKUP_DIRECTORIES=C:/Users/username/Documents,C:/Users/username/Projects
BACKUP_DESTINATION=C:/Backups

# Notifications
ENABLE_NOTIFICATIONS=True
NOTIFICATION_EMAIL=user@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
